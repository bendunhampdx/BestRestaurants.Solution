@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;

<div class="jumbotron">
  <h3>Cuisine Options</h3>
</div>

@if (@Model.Count == 0)
{
  <p>No cuisines have been added yet!</p>
}

<ul>
  @foreach (Cuisine cuisine in Model)
  {
    <li>@Html.ActionLink($"{cuisine.Type}", "Details", new {id = cuisine.CuisineId})</li>
  }
</ul>

<p>@Html.ActionLink("Add new cuisine", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>