@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;

<div class="jumbotron">
  <h3>Restaurants for @ViewBag.Cuisine.Type</h3>
</div>

@if (Model.Count == 0)
{
  <p>No restaurants for this cuisine have been added.</p>
}

<ul>
  @foreach (Restaurant restaurant in Model)
  {
      <li>@Html.ActionLink($"{restaurant.Name}", "Details", "Restaurants", new { id = restaurant.RestaurantId })</li>
  }
</ul>

<p>@Html.ActionLink("Back to list", "Index")</p>